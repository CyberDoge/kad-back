{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "src": [
        "src/*"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
